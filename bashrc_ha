## script de master slave qui doit etre inclure dans le .bashrc
# Bashrc sp√©cifique aux machines en haute dispo (heartbeat)

# Prompt rouge gras
PROMPT_CMD="/usr/local/bin/prompt_ha.sh"
export PS1=$TITLEBAR'[$($PROMPT_CMD)]\[\e[1;31m\]\u@\h:\w\[\e[$(($??7:0));37m\]\$\[\e[0;0m\] '

export PATH=$PATH:/usr/share/heartbeat/
